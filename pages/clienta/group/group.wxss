/* pages/clienta/group.wxss */

/*顶部bar*/
.group-box{
  position: fixed;
  top:130rpx;
  width: 100%;
  z-index: 999;
  height: 88rpx;
  background-color: #fff
}
.group-portrait{
  float: left;
  height: 48rpx;
  width:48rpx;
  margin:21rpx -29rpx 21rpx 21rpx;
  border-radius: 50%;
  background-color: #ccc;
  border: 1px solid red
}
.group-install{
  float: right;
  width: 135rpx;
  margin: 21rpx 0;
  font-size: 34rpx;
  background-repeat: no-repeat;
  background-size: 12%;
  background-position: 80% 50%;
  background-image: url(data:image/png;base64,)
}
/*聊天信息-box*/
scroll-view {
  position: absolute;
  box-sizing: border-box;
  top:220rpx;
  background-color: #f0f1f6;
  padding: 25rpx;
  width: 100%;
}
/*消息框一*/
.news-one{
  box-sizing: border-box;
  padding:30rpx;
  height: 200rpx;
  width: 700rpx;
  background-color: #fff;
  margin-bottom:20rpx;
  border: 1rpx solid #fff;
  border-radius: 14rpx;
}
.new-one-img{
  float: left;
  width: 140rpx;
  height: 140rpx;
  background-color: #ccc
}
.new-one-content{
  float: right;
  width: 470rpx;
  height: 90rpx;
  margin-left:25rpx;
  /*换行+省略*/
  display: -webkit-box;
  word-break: break-all;
  text-overflow: ellipsis;
  font-size: 32rpx;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp:2; 
}
.new-one-time{
  float: right;
  width: 470rpx;
  font-size: 20rpx;
  margin-top:20rpx
}
/*消息框二.css*/
.news-two{
  float: right;
  box-sizing: border-box;
  padding:20rpx 25rpx 25rpx 30rpx;
  max-width: 620rpx;
  border-radius: 14rpx;
  background-color: #fff;
  margin-bottom:20rpx;
  word-wrap: break-word;
  font-size: 32rpx;
}
/*时间box*/
.news-time{
  margin-left:50%;
  transform: translateX(-50%);
  padding: 0 24rpx;
  text-align: center;
  font-size: 20rpx;
  border-radius: 16rpx;
  background-color: #d9d9d9;
  margin-bottom:20rpx;
  clear: both;
}
/*查看*/
.news-see{
  text-align: center;
  font-size: 20rpx;
}
/*底部输入框*/
.input-bottom{
  box-sizing: border-box;
  background-color: #fff;
  position: absolute;
  bottom: 0rpx;
  border-top: 1rpx solid #b5b5b5;
  border-bottom: 1rpx solid #e5e5e5;
  z-index: 999;
  height:100rpx;
  width: 100%;
}
.input-bottom view{
  margin-top:50rpx;
  transform: translateY(-50%)
}
.input-bottom-left{
  border: 2rpx solid #b6b6b6;
  border-radius: 50%;
  height:62rpx;
  width: 62rpx;
  margin:20rpx;
  background-image: url(data:image/png;base64,);
  background-repeat: no-repeat;
  background-size: 60%;
  background-position: center;
}
.input-bottom-center input{
  width:538rpx;
  height:70rpx;
  background-color: #f0f1f6;
  
}
.input-bottom-right{
  border: 2rpx solid #b6b6b6;
  border-radius: 50%;
  height:62rpx;
  width: 62rpx;
  margin:20rpx;
  background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABwAAAAcCAYAAAByDd+UAAAAaUlEQVRIie3VQQqAIBSE4V/pWHZsT/D0XLVpIbqapCJ8A4Kb4QPFZ8g5I8aAdO0LsCvlqGoN1u8fA6fioIMOLgoacAirj9K1yI15OJH0yZGWF726If5njPcYlPIaz8JBBx38H9jO3qqWT8oVIQhX44o3AAAAAElFTkSuQmCC);
  background-repeat: no-repeat;
  background-size: 60%;
  background-position: center;
