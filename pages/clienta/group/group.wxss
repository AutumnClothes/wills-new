/*input扩展菜单*/
.input-extend{
  height:280rpx;
  position: absolute;
  bottom: 0;
  width: 100%;
  border-top:1px solid #e5e5e5;
  padding-left: 52rpx;
  box-sizing: border-box;
  background-color: #fff;
}
.input-extend-item{
  float: left;
  clear: none;
  text-align: center;
  padding:40rpx 52rpx 0rpx 3rpx;
}
.input-extend-icon{
  box-sizing: border-box;
  border:1px solid #e5e5e5;
  border-radius: 24rpx;
  height: 118rpx;
  width: 118rpx;
  background-repeat:no-repeat;
  background-size: 42%;
  background-position: center;
}
input-extend-text{
  width: 118rpx;
  font-size: 28rpx;
  text-align: center;
}